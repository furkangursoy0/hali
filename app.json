{
  "expo": {
    "name": "Halı Dene",
    "slug": "hali-vizyon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F0F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.halivizyon.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Müşteri odasının fotoğrafını çekmek için kamera gereklidir.",
        "NSPhotoLibraryUsageDescription": "Oda fotoğrafı seçmek ve sonucu kaydetmek için galeri erişimi gereklidir.",
        "NSPhotoLibraryAddUsageDescription": "AI sonuç görselini galerinize kaydetmek için izin gereklidir."
      }
    },
    "android": {
      "package": "com.halivizyon.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F0F0F"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-image-picker",
      "expo-media-library",
      "expo-asset"
    ]
  }
}